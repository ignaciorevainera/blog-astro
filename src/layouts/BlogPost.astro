---
import MainLayout from "./MainLayout.astro";
import Date from "@/components/blog/Date.astro";
import { Image } from "astro:assets";
import { type CollectionEntry } from "astro:content";
type props = CollectionEntry<"blog">["data"];
const { image, title, author, date, tags } = Astro.props;
---

<MainLayout title={title}>
	<div class="mx-auto my-6 w-full max-w-article-size space-y-4">
		<a
			class="inline-flex cursor-pointer items-center gap-2 self-start rounded-full border border-extra-soft-white px-6 py-2 text-soft-white transition-colors duration-200 hover:border-purple-500"
			href="/blog"
		>
			<svg
				viewBox="0 -960 960 960"
				xmlns="http://www.w3.org/2000/svg"
				height="20"
				width="20"
				><path
					d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z"
					fill="#BFC7D2"></path></svg
			>

			Back to blog
		</a>
		<div
			class="w-full max-w-[none] rounded-xl border border-extra-soft-white"
			transition:name={title}
		>
			<article>
				<Image
					class="w-full rounded-t-xl object-cover"
					width={1020}
					height={520}
					src={image}
					alt={image}
				/>

				<div
					class="prose prose-zinc prose-invert min-w-full px-12 py-12 lg:prose-xl"
				>
					<Date date={date} />

					<h1>{title}</h1>
					<small>{author}</small>

					<slot />
				</div>
			</article>
		</div>
	</div>
</MainLayout>
